#!/usr/local/bin/ruby
require 'rubygems'
require 'fileutils'
require 'optparse'
require 'optparse/time'
require 'ostruct'
require 'pp'
require 'genosaurus'
require "mack-facets"
require 'erb'

if ARGV[0].nil?
  puts 'Usage: gemstub [command]'
  puts 'Commands:'
  puts '  gemstub create <gem_name> [options]'
  puts '  gemstub install'
  puts '  gemstub setup <path/to/gems.yml | default is: config/gems.yml>'
  exit(0)
end

require File.join(File.dirname(__FILE__), "..", "lib", 'gemstub', 'commands', ARGV.delete(ARGV.first))
